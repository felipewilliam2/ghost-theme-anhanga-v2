                                    <div class="related-post-image">
                                        {{#if feature_image}}
                                            <img src="{{feature_image}}" alt="{{title}}">
                                        {{else}}
                                            <img src="https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=200" alt="{{title}}">
                                        {{/if}}
                                    </div>
                                    <div class="related-post-content">
                                        <div style="margin-bottom: 0.5rem;">
                                            {{#primary_tag}}
                                                <span class="category-badge category-{{slug}}" style="font-size: 0.625rem; padding: 0.125rem 0.5rem;">{{name}}</span>
                                            {{/primary_tag}}
                                        </div>
                                        <h5 class="related-post-title">{{title}}</h5>
                                        <span class="related-post-meta">
                                            ‚è±Ô∏è {{reading_time}} min
                                        </span>
                                    </div>
                                </a>
                            {{/foreach}}
                        {{/get}}
                    </div>
                    
                </aside>
                
            </div>
        </div>
    </div>
    
</article>
{{/post}}
