{{!< default}}

<section class="blog-section">
    <div class="container">
        
        {{!-- Header Section --}}
        <div class="section-header">
            <div class="section-badge">
                ðŸ”– Categoria
            </div>
            {{#tag}}
            <h2 class="section-title">
                {{name}}
            </h2>
            <p class="section-description">
                {{#if description}}
                    {{description}}
                {{else}}
                    Explorando artigos sobre <strong>{{name}}</strong>
                {{/if}}
            </p>
            {{/tag}}
        </div>

        {{!-- Post Grid --}}
        <div class="post-grid">
            {{#foreach posts}}
                <article class="post-card">
                    <a href="{{url}}">
                        
                        {{!-- Post Image --}}
                        <div class="post-image">
                            {{#if feature_image}}
                                <img src="{{feature_image}}" alt="{{title}}" loading="lazy">
                            {{else}}
                                <img src="https://images.unsplash.com/photo-1488646953014-85cb44e25828?w=600" alt="Viagem" loading="lazy">
                            {{/if}}
                            <div class="post-date">{{date format="DD MMM"}}</div>
                        </div>
                        
                        {{!-- Post Content --}}
                        <div class="post-card-content">
                            <div style="margin-bottom: 0.75rem;">
                                {{#primary_tag}}
                                    <span class="category-badge category-{{slug}}">{{name}}</span>
                                {{/primary_tag}}
                            </div>
                            <h4 class="post-title">{{title}}</h4>
                            <p class="post-excerpt">{{excerpt words="20"}}...</p>
                            
                            <div class="post-card-footer">
                                <span class="post-author">
                                    ðŸ‘¤ {{#primary_author}}{{name}}{{/primary_author}}
                                </span>
                                <div class="post-arrow">
                                    â†’
                                </div>
                            </div>
                        </div>
                        
                    </a>
                </article>
            {{/foreach}}
        </div>
        
        {{!-- Pagination --}}
        {{pagination}}
        
    </div>
</section>
